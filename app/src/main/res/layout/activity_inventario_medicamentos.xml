    </TableLayout>

    <!-- Espacio entre la tabla y los botones -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <!-- Contenedor de los botones (Eliminar, Modificar, Agregar) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!-- Botón Eliminar -->
        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="40dp"
            android:text="@string/btn_medicament_delete" />

        <!-- Botón Modificar -->
        <Button
            android:id="@+id/btnModificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="40dp"
            android:text="@string/btn_medicament_modify" />

        <!-- Botón Agregar -->
        <Button
            android:id="@+id/btnAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/green"
            android:backgroundTint="@color/white"
            android:text="@string/btn_medicament_add" />
    </LinearLayout>
</LinearLayout>
