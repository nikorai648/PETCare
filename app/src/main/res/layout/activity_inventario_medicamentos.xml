<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InventarioMedicamentosActivity">

    <TextView
        android:id="@+id/textView37"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="80dp"
        android:text="PETCare" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:text="Inventario Medicamentos" />

    <!-- Tabla de Inventario de Medicamentos -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <!-- Fila 1: Medicamentos -->
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Medicamentos"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Medicamento1" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Medicamento2" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Medicamento3" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Medicamento4" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Medicamento5" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Medicamento6" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Medicamento7" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Medicamento8" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Medicamento9" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Medicamento10" android:gravity="center" />
        </TableRow>

        <!-- Fila 2: Cantidad de Medicamentos -->
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Cantidad"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="5" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="5" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="5" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="5" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="5" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="5" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="5" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="5" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="5" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="5" android:gravity="center" />
        </TableRow>

        <!-- Fila 3: Estado de Medicamentos -->
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Estado"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Buen Estado" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Buen Estado" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Buen Estado" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Buen Estado" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Buen Estado" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Buen Estado" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Buen Estado" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Buen Estado" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Buen Estado" android:gravity="center" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="8dp" android:text="Buen Estado" android:gravity="center" />
        </TableRow>
    </TableLayout>
    <!-- Espacio entre la tabla y los botones -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="21dp" />

    <!-- Contenedor de los botones (Eliminar, Modificar, Agregar) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <!-- Botón Eliminar -->
        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:layout_gravity="center"
            android:layout_marginEnd="40dp" />

        <!-- Botón Modificar -->
        <Button
            android:id="@+id/btnModificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:layout_gravity="center"
            android:layout_marginEnd="40dp" />

        <!-- Botón Agregar -->
        <Button
            android:id="@+id/btnAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>
